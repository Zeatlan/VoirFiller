{
    "manifest_version": 3,
    "name": "Voirfiller",
    "version": "1.0",
    "description": "Détecte si un épisode d'anime est un filler.",
    "permissions": ["activeTab"],
    "host_permissions": ["*://*.voiranime.com/*"],
    "background": {
        "service_worker": "service-worker.js"
    },
    "icons": {
        "16": "images/icon16-2.png",
        "48": "images/icon48-2.png",
        "128": "images/icon128-2.png"
    },
    "content_scripts": [
        {
            "matches": ["*://*.voiranime.com/*"],
            "js": ["content.js"]
        }
    ]
}